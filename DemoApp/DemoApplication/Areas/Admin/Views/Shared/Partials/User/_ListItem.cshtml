@using DemoApplication.Areas.Admin.ViewModels.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ListItemViewModel

<tr class="author-record" data-id="@Model.Id">
    <td>@Model.FirstName</td>
    <td>@Model.LastName</td>
    <td>@Model.Email</td>
    <td>@Model.CreatedAt</td>
    <td>@Model.UpdatedAt</td>
    <td>@Model.Role</td>
    <td class="text-end">
        <a asp-route="admin-user-update" asp-route-id="@Model.Id" data-bs-toggle="modal" data-bs-target="#updateAuthorModal" class="btn btn-primary update-button">Update</a>
        <a asp-route="admin-user-delete" asp-route-id="@Model.Id" class="btn btn-danger remove-button">Delete</a>
    </td>
</tr>